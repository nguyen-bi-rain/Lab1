@{
    Layout = "~/Views/Shared/_MyLayoutHelper.cshtml";
    ViewData["Title"] = "Student List";
}
@model IEnumerable<Student>

<a asp-action="Create" asp-controller="Student" class="btn btn-primary">Create Student</a>
@* the a thuan *@
@* <a href="/Admin/student/add"></a> *@
@* html taghelper asp-action asp-route *@
@* <a  asp-route="list">Create</a> *@

<table class="table table-striped">
    <thead>
        <tr>
            <th>Mã</th>
            <th>Họ tên</th>
            <th>Ngày sinh</th>
            <th>Ngành</th>
            <th>Giới tính</th>
            <th>Hệ ĐT</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Hinh anh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Name</td>
                <td>@s.DateOfBorth</td>
                @{
                    string str = "";
                    switch (s.Branch)

                    {

                        case Branch.IT:
                            str = "CNTT";
                            break;
                        case Branch.BE:
                            str = "Kinh tế";
                            break;
                        case Branch.CE:
                            str = "Công trình";

                            break;
                        case Branch.EE:
                            str = "Điện - Điện tử";
                            break;
                    }
                }
                <td>@str</td>
                <td>@(s.Gender == Gender.Male ? "Nam" : "Nữ")</td>
                <td>@(s.IsRegular ? "Chính quy" : "Phi chính quy")</td>
                <td>@s.Address</td>
                <td>@s.Email</td>
                <td>
                    @if(s.ImageURL != null)
                    {
                        <img src="/uploads/@s.ImageURL.FileName" class="w-100">
                    }
                </td>
                
            </tr>
        }
    
    </tbody>
</table>
@section Scripts{
    <script>
        var table = document.querySelector("table")
        table.onclick = function() {
                table.style = "background-color:yellow;"
        }
    </script>
}